<% layout("/layouts/boilerplate.ejs") %>

<body>
  <% for (exam of allExams) { %>
  <div style="border: 2px solid black; margin: 4rem; padding: 1.5rem">
    <h2><%= exam.examName %></h2>
    <p><b>Exam Type:</b><%= exam.examType%></p>
    <p><b>Department</b><%= exam.department%></p>
    <p><b>Semester</b> <%= exam.semester%></p>
    <p><b>Exam Start Date:</b><%= exam.startDate.toDateString()%></p>
    <p><b>Exam End Date:</b><%= exam.endDate.toDateString()%></p>
    <a href="<%= exam.timetable.url %>" target="_blank">View Timetable</a>
  </div>
  <% } %>
</body>
