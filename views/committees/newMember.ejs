<% layout("/layouts/boilerplate.ejs") %>
<body>
  <h3>Add Member to Committee</h3>

  <form
    action="/admin/committees/<%= committee._id %>/members?_method=PUT"
    method="POST"
  >
    <input
      type="text"
      name="member[name]"
      placeholder="Enter member name"
      required
    /><br />

    <!-- Member Role -->
    <input
      type="text"
      name="member[role]"
      placeholder="Enter member role"
      required
    /><br />

    <!-- Submit Button -->
    <button type="submit">Add Member</button>
  </form>

  <a href="/admin/committees/<%= committee._id %>">Back to Committee</a>
</body>
