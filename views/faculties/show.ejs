<% layout("/layouts/boilerplate.ejs") %>
  <body>
    <li>
      <img
        src="<%= faculty.photo.url %>"
        alt="img"
        height="100px"
        width="40px"
      />
    </li>
    <li><%= faculty.name %></li>
    <li><%= faculty.department %></li>
    <li><%= faculty.designation %></li>
    <li><%= faculty.email %></li>
    <li><%= faculty.phone %></li>
    <li><%= faculty.specialization %></li>
    <li><%= faculty.experience %></li>
    <li><%= faculty.date_of_joining.toDateString() %></li>

    <a href="/admin/faculties/<%= faculty._id %>/edit">Edit</a><br />

    <form
      action="/admin/department/<%= depId %>/faculties/<%= faculty._id %>?_method=DELETE"
      method="post"
    >
      <button>Delete</button>
    </form>
  </body>

