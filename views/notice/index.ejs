<% layout("/layouts/admin_boilerplate.ejs") %>
<head>
    <link rel="stylesheet" href="/styles/admin/notices.css">
</head> 
<div class="notices-container">
    <h1 class="notices-title">Notices</h1>
    
    <div class="notices-grid">
        <% for(let notice of allNotices){ %>
            <a href="/admin/notices/<%= notice._id %>" class="notice-card">
                <i class="fas fa-bell" style="margin-right: 12px;"></i>
                <%= notice.title %>
            </a>
        <% } %>
    </div>

    <button class="add-notice-btn" onclick="window.location.href='/admin/notices/new'">
        <i class="fas fa-plus" style="margin-right: 8px;"></i>
        Add Notice
    </button>
</div>
