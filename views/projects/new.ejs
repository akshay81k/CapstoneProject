<% layout("/layouts/admin_boilerplate.ejs") %>
<head>
  <link rel="stylesheet" href="/styles/admin/addproject.css">
</head>
        <img src="/images/blob1.png" class="blob1">
        <div class="project-container">
            <h3>Add Project</h3>
            <form action="/admin/projects" method="POST">
                <label for="studentName">
                    Student Names:
                    <input type="text" id="studentName" name="project[studentName]" placeholder="Enter student names (comma separated)" required />
                </label>

                <label for="graduationYear">
                    Graduation Year:
                    <input type="text" id="graduationYear" name="project[graduationYear]" placeholder="Enter graduation year" required />
                </label>

                <label for="department">
                    Department:
                    <select id="department" name="project[department]" required>
                        <option value="" disabled selected>Select Department</option>
                        <option value="Computer Engineering">Computer Engineering</option>
                        <option value="Civil Engineering">Civil Engineering</option>
                        <option value="Mechanical Engineering">Mechanical Engineering</option>
                        <option value="Big Data">Big Data</option>
                        <option value="Artificial Intelligence">Artificial Intelligence</option>
                    </select>
                </label>

                <div class="project-details">
                    <h4>Project Details</h4>
                    
                    <label for="projectName">
                        Project Name:
                        <input type="text" id="projectName" name="project[projectDetails][projectName]" placeholder="Enter project name" required />
                    </label>

                    <label for="description">
                        Description:
                        <textarea id="description" name="project[projectDetails][description]" placeholder="Enter project description" required></textarea>
                    </label>

                    <label for="githubLink">
                        GitHub Link:
                        <input type="text" id="githubLink" name="project[projectDetails][githubLink]" placeholder="Enter GitHub link" required />
                    </label>

                    <label for="status">
                        Status:
                        <select id="status" name="project[projectDetails][status]" required>
                            <option value="" disabled selected>Select Project Status</option>
                            <option value="completed">Completed</option>
                            <option value="in progress">In Progress</option>
                            <option value="archived">Archived</option>
                        </select>
                    </label>
                </div>

                <button type="submit">Add Project</button>
            </form>
        </div>
        <img src="/images/blob2.png" class="blob2">
