<% layout("/layouts/boilerplate.ejs") %>
<body>
  <h3>All Projects</h3>

  <form action="/admin/projects/new" method="GET">
    <button>Add Project</button>
  </form>

  <% for (let department in allProjects) { %>
  <h4><%= department %></h4>
  <ul>
    <% allProjects[department].forEach(project => { %>
    <li>
      <a href="/admin/projects/<%= project._id %>"
        ><%= project.projectDetails.projectName %></a
      >
    </li>
    <% }); %>
  </ul>
  <% } %>
</body>
