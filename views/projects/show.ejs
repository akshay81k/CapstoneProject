<% layout("/layouts/admin_boilerplate.ejs") %>
<head>
    <link rel="stylesheet" href="/styles/admin/projectshow.css">
</head>

<div class="project-show-container">
    <h1 class="project-show-title">Project Details</h1>
    
    <div class="project-details">
        <ul class="project-info">
            <li>
                <strong>Project Name:</strong> <%= project.projectDetails.projectName %>
            </li>
            <li>
                <strong>Description:</strong> <%= project.projectDetails.description %>
            </li>
            <li>
                <strong>GitHub Link:</strong>
                <a href="<%= project.projectDetails.githubLink %>" target="_blank" class="github-link">
                    <i class="fab fa-github" style="margin-right: 8px;"></i>
                    View Repository
                </a>
            </li>
            <li>
                <strong>Status:</strong> <%= project.projectDetails.status %>
            </li>
            <li>
                <strong>Submission:</strong> <%= project.projectDetails.submissionDate.toDateString() %>
            </li>
            <li>
                <strong>Department:</strong> <%= project.department %>
            </li>
            <li>
                <strong>Batch Year:</strong> <%= project.graduationYear %>
            </li>
            <li>
                <strong>Students:</strong> <%= project.studentName.join(", ") %>
            </li>
        </ul>

        <div class="project-actions">
            <a href="/admin/projects/<%= project._id %>/edit" class="edit-btn">
                <i class="fas fa-edit" style="margin-right: 8px;"></i>
                Edit Project
            </a>

            <form action="/admin/projects/<%= project._id %>?_method=DELETE" method="post" style="display: inline;">
                <button class="delete-btn">
                    <i class="fas fa-trash" style="margin-right: 8px;"></i>
                    Delete Project
                </button>
            </form>
        </div>
    </div>
</div>
