<% layout("/layouts/admin_boilerplate.ejs") %>
<head>
  <link rel="stylesheet" href="/styles/admin/addfacility.css">
</head> 
        <img src="/images/blob1.png" class="blob1">
        <div class="facility-container">
            <h3>Add Facility</h3>
            <form action="/admin/facilities" method="POST" enctype="multipart/form-data">
                <label for="facilityName">
                    Facility Name:
                    <input type="text" id="facilityName" name="facility[facilityName]" placeholder="Enter facility name" required />
                </label>

                <label for="description">
                    Description:
                    <textarea id="description" name="facility[description]" placeholder="Enter detailed description of the facility" required></textarea>
                </label>

                <label for="location">
                    Location:
                    <input type="text" id="location" name="facility[location]" placeholder="Enter facility location" required />
                </label>

                <label for="timing">
                    Timing:
                    <input type="text" id="timing" name="facility[timing]" placeholder="Enter timing (e.g., 9:00 AM - 5:00 PM)" required />
                </label>

                <div class="contact-section">
                    <h4>Contact Information</h4>
                    
                    <label for="contactName">
                        Contact Name:
                        <input type="text" id="contactName" name="facility[contact][name]" placeholder="Enter contact person's name" required />
                    </label>

                    <label for="contactEmail">
                        Contact Email:
                        <input type="email" id="contactEmail" name="facility[contact][email]" placeholder="Enter contact email address" required />
                    </label>

                    <label for="contactPhone">
                        Contact Phone:
                        <input type="tel" id="contactPhone" name="facility[contact][phone]" placeholder="Enter contact phone number" required />
                    </label>
                </div>

                <label for="facilityImage">
                    Facility Image:
                    <input type="file" id="facilityImage" name="facility[img]" accept="image/*" required />
                </label>

                <button type="submit">Add Facility</button>
            </form>
        </div>
        <img src="/images/blob2.png" class="blob2">

