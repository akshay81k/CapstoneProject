<% layout("/layouts/admin_boilerplate.ejs") %>
<head>
    <link rel="stylesheet" href="/styles/admin/facilities.css">
</head> 
<div class="facilities-container">
    <h1 class="facilities-title">Facilities</h1>
    
    <div class="facilities-grid">
        <% if(allFacilities.length === 0){ %>
            <h2 class="no-facilities-msg">No facilities found</h2>
        <% }else{ %>
            <% for(let facility of allFacilities){ %>
                <a href="/admin/facilities/<%= facility._id %>" class="facility-card">
                    <i class="fas fa-building" style="margin-right: 12px;"></i>
                    <%= facility.facilityName %>
                </a>
            <% } %>
        <% } %>
    </div>

    <button class="add-facility-btn" onclick="window.location.href='/admin/facilities/new'">
        <i class="fas fa-plus" style="margin-right: 8px;"></i>
        Add Facility
    </button>
</div>
