<% layout("/layouts/admin_boilerplate.ejs") %>
<head>
    <link rel="stylesheet" href="/styles/admin/events.css">
</head> 
<div class="events-container">
    <h1 class="events-title">Events</h1>
    
    <div class="events-grid">
        <% for(let event of allEvents){ %>
            <a href="/admin/events/<%= event._id %>" class="event-card">
                <i class="fas fa-calendar-alt" style="margin-right: 12px;"></i>
                <%= event.name %>
            </a>
        <% } %>
    </div>

    <button class="add-event-btn" onclick="window.location.href='/admin/events/new'">
        <i class="fas fa-plus" style="margin-right: 8px;"></i>
        Add Event
    </button>
</div>
