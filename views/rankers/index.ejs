  <body>
    <form action="/admin/rankers/new" method="GET">
      <button>Add Ranker</button>
    </form>

    <!-- Computer Engineering Section -->
    <h2>Computer Engineering</h2>
    <table border="1">
      <tr>
        <th>Photo</th>
        <th>Name</th>
        <th>Percentage</th>
        <th>Rank</th>
        <th>Year</th>
        <th>Edit</th>
      </tr>
      <% let rank = 1; %> <% for (let ranker of coRankers) { %>
      <tr>
        <td>
          <img
            src="<%= ranker.photo.url %>"
            alt="Photo of <%= ranker.name %>"
            height="50px"
            width="30px"
          />
        </td>
        <td><%= ranker.name %></td>
        <td><%= ranker.percentage %></td>
        <td><%= rank %></td>
        <td><%= ranker.year %></td>
        <td><a href="/admin/rankers/<%= ranker._id %>/edit">Edit</a></td>
      </tr>
      <% rank++; %> <% } %>
    </table>
    <form
      action="/admin/rankers/delete?department=Computer Engineering&_method=DELETE"
      method="POST"
    >
      <button type="submit">Delete All Entries</button>
    </form>

