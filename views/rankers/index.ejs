<% layout("/layouts/admin_boilerplate.ejs") %>
<head>
    <link rel="stylesheet" href="/styles/admin/rankers.css">
</head> 
<div class="rankers-container">
    <h1 class="rankers-title">Rankers</h1>
    
    <div class="rankers-grid">
        <!-- Computer Engineering Section -->
        <div class="department-section">
            <h2 class="department-title">Computer Engineering</h2>
            <table class="rankers-table">
                <thead>
                    <tr>
                        <th>Photo</th>
                        <th>Name</th>
                        <th>Percentage</th>
                        <th>Rank</th>
                        <th>Year</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% let rank = 1; %>
                    <% if(coRankers.length === 0){ %>
                        <h1 class="no-rankers">No rankers found</h1>
                    <% }else{ %>
                        <% for (let ranker of coRankers) { %>
                            <tr>
                                <td><img src="<%= ranker.photo.url %>" alt="Photo of <%= ranker.name %>"></td>
                                <td><%= ranker.name %></td>
                                <td><%= ranker.percentage %>%</td>
                                <td><%= rank %></td>
                                <td><%= ranker.year %></td>
                                <td><a href="/admin/rankers/<%= ranker._id %>/edit" class="edit-link">Edit</a></td>
                            </tr>
                            <% rank++; %>
                            <% } %>
                    <% } %>
                </tbody>
            </table>
            <form action="/admin/rankers/delete?department=Computer Engineering&_method=DELETE" method="POST" style="text-align: right; margin-top: 10px;">
                <button type="submit" class="delete-btn">Delete All Entries</button>
            </form>
