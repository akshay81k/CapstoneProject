<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rankers</title>
    <style>
      table {
        width: 100%;
        border-collapse: collapse;
      }
      th,
      td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
      }
      th {
        background-color: #f2f2f2;
      }
    </style>
  </head>
  <body>
    <% for (const department in rankersByDepartmentAndYear) { %>
    <h2><%= department %> Department</h2>

    <% for (const year in rankersByDepartmentAndYear[department]) { %>
    <h3>Year <%= year %></h3>
    <table>
      <thead>
        <tr>
          <th>Rank</th>
          <th>Name</th>
          <th>Percentage</th>
          <th>Photo</th>
        </tr>
      </thead>
      <tbody>
        <% rankersByDepartmentAndYear[department][year].forEach((ranker, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= ranker.name %></td>
          <td><%= ranker.percentage %>%</td>
          <td>
            <img
              src="<%= ranker.photo.url %>"
              alt="<%= ranker.name %>'s photo"
              style="width: 50px; height: 50px"
            />
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } %>
    <hr />
    <% } %>
  </body>
</html>
