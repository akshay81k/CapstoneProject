<% layout("/layouts/boilerplate.ejs") %>

<body>
  <h3>Departments</h3>

  <form action="/admin/departments/new" method="GET">
    <button>Add Department</button>
  </form>
  <ul>
    <% for(let department of allDepartments){%>
    <li>
      <a href="/admin/departments/<%= department._id %>">
        <%= department.departmentName %>
      </a>
    </li>

    <% } %>
  </ul>
</body>
