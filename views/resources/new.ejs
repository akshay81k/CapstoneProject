<% layout("/layouts/boilerplate.ejs") %>
  <body>
    <h3>Add Resource</h3>

    <br />
    <form
      action="/admin/resources/<%= id %>"
      method="POST"
      enctype="multipart/form-data"
    >
      <input
        type="text"
        name="resource[subjectName]"
        placeholder="Enter Subject Name"
        required
      /><br />
      <input
        type="number"
        name="resource[semester]"
        placeholder="Enter Semester"
        required
      /><br />
      <input
        type="text"
        name="resource[subjectCode]"
        placeholder="Enter subjectCode"
        required
      /><br />
      <input
        type="text"
        name="resource[materials][0][textbookTitle]"
        placeholder="Enter textbook title"
      /><br />
      <input
        type="file"
        name="resource[materials][0][textbookURL]"
        placeholder="Enter textbook URL"
      /><br />
      <label for="paperLinks">Upload Paper Links:</label>
      <input
        type="file"
        name="resource[materials][0][paperLinks][]"
        id="paperLinks"
        multiple
      /><br />
      <button>Add Resource</button>
    </form>
  </body>
